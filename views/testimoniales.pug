extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}     
        .row

            h2.d-block.w-100.text-center Agregar un Testimonial 

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            imput#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control") 
                        .form-group
                            label(for="nombre") Correo electronico
                            imput#correo(type="text", placeholder="Tu Correo", name="correo", class="form-control") 
                        .form-group
                            label(for="nombre") Correo electronico
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu Mensaje", rows=3) 

                        input.btn.btn-success.btn-block(type="submit")